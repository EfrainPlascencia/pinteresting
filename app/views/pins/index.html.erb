<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:medium) %>
      <div class:"panel-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
          <div class="btn-group btn-group-xs">
            <%= link_to 'Show', pin, method: :get, class: "btn btn-primary" %>
            <% if pin.user == current_user %>
              <%= link_to 'Edit', edit_pin_path(pin), method: :get, class: "btn btn-primary" %>
              <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?',  }, class: "btn btn-primary"%>
            <% end %>
          </div>
      </div>
    </div>
  <% end %>
</div>