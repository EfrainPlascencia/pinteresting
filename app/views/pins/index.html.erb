<div class="panel panel-default">
  
  <div class="panel-heading">
    <h1>Listing pins</h1>
  </div>

  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th><h3>Description</h3></th>
          <th><h3>User</h3></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <div>
              <td><%= pin.description %></td>
              <td><%= pin.user.email if pin.user %></td>
            </div>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to 'Show', pin, method: :get, class: "btn btn-primary" %>
                <% if pin.user == current_user %>
                  <%= link_to 'Edit', edit_pin_path(pin), method: :get, class: "btn btn-primary" %>
                  <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?',  }, class: "btn btn-primary"%>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? %>
      <div class="form-group">
        <%= button_to 'New Pin', new_pin_path, method: :get, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</div>